{
  "name": "compile-battle-stats",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check": "biome check",
    "check:fix": "biome check --write",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest run",
    "test:staged": "vitest run related --changed",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "firebase": "^12.8.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "react-toastify": "^11.0.5",
    "secretlint": "^11.3.0",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-beasties": "^0.3.5",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --write"
    ],
    "*": [
      "secretlint"
    ]
  }
}
